@inject NavigationManager NavigationManager

<div class="outer-div" @onclick="GoToPage">
    <div class="image">
        <img src="@imgSrc"/>
    </div>
    <div class="details">
        <h3>@CarMakeName</h3>
        <h3>@CarModelName</h3>
    </div>
    <div class="details-pricing">
        <h4>From</h4>
        <h4 id="price">£@CarStartingPrice</h4>
        <h4>per month</h4>
    </div>
</div>
@code {
    [Parameter, EditorRequired]
    public int CarId { get; set; }
    [Parameter, EditorRequired]
    public string CarMakeName { get; set; }
    [Parameter, EditorRequired]
    public string CarModelName { get; set; }
    [Parameter, EditorRequired]
    public int CarStartingPrice { get; set; }
    [Parameter, EditorRequired]
    public string imgSrc { get; set; }

    private void GoToPage(){
        NavigationManager.NavigateTo($"/cars/{CarId}/modelvariant");
    }
}
